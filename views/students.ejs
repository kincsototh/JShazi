<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Students</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <div class="row">
        <div class="d-flex align-items-center mb-3 mt-3">
            <h2 class="mb-0">STUDENTS OF <%= teacher.name %></h2>
            <a href="/teachers/<%= teacher.id %>/new" class="btn btn-primary ms-3">Add new</a>
        </div>

        <table class="table table-responsive">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">E-mail of parent</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                    <tr>
                        <td></td>
                        <td><%= student.name %></td>
                        <td><%= student.age %></td>
                        <td><%= student.email_parent %></td>
                        <td class="d-flex justify-content-end">
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="/teachers/<%= teacher.id %>/edit/<%= student.id %>" class="btn btn-primary ms-3">Update</a>
                                <a href="/teachers/<%= teacher.id %>/del/<%= student.id %>" class="btn btn-danger ms-3">Delete</a>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="col-sm-10">
            <a href="/teachers" class="btn btn-primary ms-3">Back to teacher list</a>
        </div>
    </div>
</div>

<script src="/js/jquery.1.11.3.js"></script>
<script src="/js/bootstrap.js"></script>
</body>
</html>
