<!-- modstudent.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EDIT STUDENT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <div class="row">
        <div class="d-flex align-items-center mb-3 mt-3">
          <h2 class="mb-0">EDITING STUDENT: <%= student.name %></h2>
        </div>
        <form>
            <div class="form-group row">
                <label for="inputName3" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputName3" 
                           value="<%= student.name %>" name="name">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputAge3" class="col-sm-2 col-form-label">Age</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="inputAge3" 
                           value="<%= student.age %>" name="age">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">E-mail of parent</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail3" 
                           value="<%= student.parentEmail %>" name="parentEmail">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <a href="/teachers/<%= teacher.id %>" class="btn btn-primary">Save and back</a>
                    <a href="/teachers/<%= teacher.id %>" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="/js/jquery.1.11.3.js"></script>
<script src="/js/bootstrap.js"></script>
</body>
</html>