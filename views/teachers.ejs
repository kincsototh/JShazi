<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Teachers</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <div class="row">
      <div class="d-flex align-items-center mb-3 mt-3">
        <h2 class="mb-0">TEACHERS</h2>
        <a href="/teachers/new" class="btn btn-primary ms-3">Add new</a>
      </div>
      
      <table class="table table-responsive">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Field (instrument)</th>
            <th scope="col">E-mail address</th>
            <th scope="col">Phone number</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% teachers.forEach(teacher => { %>
            <tr>
              <td class="d-flex">
                <div class="btn-group btn-group-sm" role="group">
                  <a href="/teachers/<%= teacher.id %>" class="btn btn-primary ms-3">Students</a>
                </div>
              </td>
              <td><%= teacher.name %></td>
              <td><%= teacher.field %></td>
              <td><%= teacher.email %></td>
              <td><%= teacher.phone %></td>
              <td class="d-flex justify-content-end">
                <div class="btn-group btn-group-sm" role="group">
                  <a href="/teachers/edit/<%= teacher.id %>" class="btn btn-primary ms-3">Update</a>
                  <form method="POST" action="/teachers/delete/<%= teacher._id %>" style="display: inline;">
                    <button type="submit" class="btn btn-danger ms-3">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
</div>

<script src="/js/jquery.1.11.3.js"></script>
<script src="/js/bootstrap.js"></script>
</body>
</html>
